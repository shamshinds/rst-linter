{
  "name": "rst-linter",
  "displayName": "rst-linter",
  "description": "Linter and fixer for reStructuredText",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "RST Linter",
      "properties": {
        "rstLinter.enableReplaceYo":{
          "type": "boolean",
          "default": true,
          "description": "Заменять «ё» на «е»."
        },
        "rstLinter.enableSentencePerLine": {
          "type": "boolean",
          "default": true,
          "description": "Требовать, чтобы каждое предложение начиналось с новой строки."
        },
        "rstLinter.enablePlaceholderSnakeCaseRule": {
          "type": "boolean",
          "default": true,
          "description": "Проверять написание плейсхолдеров."
        }
      }
    },
    "commands": [
      {
        "command": "rst-linter.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "restructuredtext",
        "aliases": ["reST", "reStructuredText"],
        "extensions": [".rst", ".rest", ".rsti"],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
